#! /bin/bash
# set -x

BASE=$PROJECT_SOURCE
LAB=$BASE/lab
CONFIG=$BASE/support/config
TOOLS=$BASE/support/tools
FF=$TOOLS/solution/steps

while IFS= read -r line || [[ -n "$line" ]]; do
    # Skip empty lines
    [[ -z "$line" ]] && continue

    # Extract step number (first field) and the rest (title)
    step=$(echo "$line" | cut -d' ' -f1)
    title=$(echo "$line" | cut -d' ' -f2-)

    # Print formatted output
    echo -e "\033[33mstep $step [$title]\033[0m"
done < "$FF/titles.txt"